@model GFS.Models.LoginViewModel

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<style>
    .form-signin {
        margin: 0 auto;
        max-width: 330px;
        padding: 15px;
    }
</style>
<div class="container-fluid">
    <!-- Page Heading -->
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header"></h1>
        </div>
    </div>
    <!-- /.row -->
    @using (Html.BeginForm("Login", "Account", FormMethod.Post, new { @class = "form-signin", role = "form" }))
    {
        @Html.AntiForgeryToken()
        <div align="center">
            <img src="~/Images/Logo.png" alt="Company logo" width="200" height="100" po />
        </div>
        <div align="center">
            <h2 class="form-signin-heading">Please sign in</h2>
            <hr />
        </div>
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        @Html.TextBoxFor(m => m.UserName, new { @class = "form-control", placeholder = "Email As Username" })
        @Html.ValidationMessageFor(m => m.UserName, "", new { @class = "text-danger" })
        <br />
            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password" })
            @Html.ValidationMessageFor(m => m.Password, "", new { @class = "text-danger" })

            <label class="checkbox">
                @Html.CheckBoxFor(m => m.RememberMe)
                Remember me
            </label>
            <input type="submit" value="Log in" class="btn btn-lg btn-primary btn-block" />

    }
    <br />
    <br />
    <br />
    <p>
        <div>
            @Html.ActionLink("Register", "Create", "Users")
        </div>
    </p>
    <br />
    <br />
    <br />
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
