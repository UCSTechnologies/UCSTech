@model GFS.Models.Policies.Deceased

@{
    ViewBag.Title = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Declare As Deceased</h2>


@using (Html.BeginForm("Create", "Deceaseds", null, FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()


    <div class="form-horizontal">
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @if (Session["PolicyNo"] != null)
        {
            <div class="form-group">
                @Html.LabelFor(model => model.policyNo, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">               
                      @Session["PolicyNo"].ToString()                
                </div>
            </div>
        }

        @if (Session["First Name"] != null)
        {
            <div class="form-group">
                @Html.LabelFor(model => model.firstName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">                
                      @Session["First Name"].ToString()                                
                </div>
            </div>
        }

        @if (Session["Last Name"] != null)
        {
            <div class="form-group">
                @Html.LabelFor(model => model.lastName, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">                
                     @Session["Last Name"].ToString()                                
                </div>
            </div>
        }

        @if (Session["ID Number"] != null)
        {
            <div class="form-group">
                @Html.LabelFor(model => model.idNo, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">                
                    @Session["ID Number"].ToString()
                </div>
            </div>
        }
        @if (Session["Age"] != null)
        {
            <div class="form-group">
                @Html.LabelFor(model => model.age, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">                
                    @Session["Age"].ToString()               
                </div>
            </div>
        }

        <div class="form-group">
            @Html.LabelFor(model => model.causeOfDeath, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.causeOfDeath, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.causeOfDeath, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.placeofdeath, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.placeofdeath, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.placeofdeath, "", new { @class = "text-danger" })
            </div>
        </div>
        <div class="form-group">
            @Html.LabelFor(model => model.DateOfDeath, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-3">
                @Html.EditorFor(model => model.DateOfDeath, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.DateOfDeath, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="editor-label">
            <label>Upload Deceased Verification Documents:</label>
        </div>
        <div class="editor-field">
            <input type="file" name="file" multiple="multiple" />
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Save" class="btn btn-default" />
            </div>
        </div>
    </div>
    if (TempData["responce13"] != null)
    {
        <script>alert("@TempData["responce13"].ToString()");</script>
    }
    @Html.ValidationSummary()
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    <script src="~/Scripts/jquery.validate.min.js"></script>
    <script src="~/Scripts/jquery.validate.unobtrusive.min.js"></script>
}
