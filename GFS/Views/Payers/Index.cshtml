@model IEnumerable<GFS.Models.Policies.Payer>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Payers</h2>
<div align="right">

    <p>
        @using (Html.BeginForm("Index", "Payers", System.Web.Mvc.FormMethod.Get))
        {
            <div>
                <b>Search By:</b>
                @Html.RadioButton("SearchBy", "idnumber", true)<text>ID Number</text>
                @Html.RadioButton("SearchBy", "policyNo")<text>Policy Number</text>
            </div>
            @Html.RadioButton("SearchBy", "coveredby")<text>Policy Holder</text>
            @Html.RadioButton("SearchBy", "fName")<text>First Name</text><br />

            @Html.TextBox("Search")<input type="submit" value="Search" class="btn btn-primary" />
        }
    </p>

</div>
<table class="table table-bordered table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.paymentType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.firstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.lastName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.idNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.relation)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.contactNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.payerEmail)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.payingFor)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.policyNo)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.paymentType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.firstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lastName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.idNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.relation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.contactNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.payerEmail)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.payingFor)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.policyNo)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.payerNo }) |
                @Html.ActionLink("Details", "Details", new { id = item.payerNo }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.payerNo })
            </td>
        </tr>
    }

</table>
