@model IEnumerable<GFS.Models.StockFile>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div>
    <input type="button" value="Add To Stock" class="btn btn-primary" onclick="@("window.location.href='" + @Url.Action("Create", "StockFiles") + "'");" />
</div>
<h2>Inventory</h2>
<div align="right">

    <p>
        @using (Html.BeginForm("Index", "StockFiles", System.Web.Mvc.FormMethod.Get))
        {
            <b>Search By:</b>  @Html.RadioButton("SearchBy", "stockCode", true)<text>Stock Code</text>
            @Html.RadioButton("SearchBy", "category")<text>Category</text>
            @Html.RadioButton("SearchBy", "status")<text>Status</text><br />

            @Html.TextBox("Search")<input type="submit" value="Search" class="btn btn-primary" />
        }
    </p>

</div>
<table class="table table-bordered table-responsive table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.stockCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.category)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.albumArtUrl)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.status)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.quantity)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.pricePerItem)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.costPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.sellingPrice)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.stockCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.category)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.albumArtUrl)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.status)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.quantity)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.pricePerItem)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.costPrice)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.sellingPrice)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.stockNumber }) |
                @Html.ActionLink("Details", "Details", new { id = item.stockNumber }) |
               @if (item.quantity == 0)
               { @Html.ActionLink("Delete", "Delete", new { id = item.stockNumber })}
            </td>
        </tr>
    }

</table>
