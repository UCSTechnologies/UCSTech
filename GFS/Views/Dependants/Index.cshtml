@model IEnumerable<GFS.Models.Policies.Dependant>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Dependants</h2>
<div align="right">

    <p>
        @using (Html.BeginForm("Index", "Dependants", System.Web.Mvc.FormMethod.Get))
        {
            <div>
                <b>Search By:</b>
                @Html.RadioButton("SearchBy", "idnumber", true)<text>ID Number</text>
                @Html.RadioButton("SearchBy", "policyNo")<text>Policy Number</text>
            </div>
            @Html.RadioButton("SearchBy", "coveredby")<text>Policy Holder</text>
            @Html.RadioButton("SearchBy", "fName")<text>First Name</text><br />

            @Html.TextBox("Search")<input type="submit" value="Search" class="btn btn-primary" />
        }
    </p>

</div>

<table class="table table-bordered table-responsive table-hover">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.coveredby)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.lName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.IdNo)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.dOb)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.age)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.relationship)
        </th>
        @*<th>
            @Html.DisplayNameFor(model => model.amount)
        </th>*@
        <th>
            @Html.DisplayNameFor(model => model.policyPlan)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.policyNo)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.coveredby)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.lName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IdNo)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.dOb)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.age)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.relationship)
            </td>
            @*<td>
                @Html.DisplayFor(modelItem => item.amount)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.policyPlan)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.policyNo)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.depNo }) |
                @Html.ActionLink("Details", "Details", new { id = item.depNo }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.depNo })
            </td>
        </tr>
    }

</table>
