@model IEnumerable<GFS.Models.Policies.DebitOrderAuthorization>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Authorizations</h2>
<div align="right">
    <table>
        <tr>
            @using (Html.BeginForm())
            {
                <td><label>Search by Policy Number:</label> </td>
                <td>@Html.TextBox("search")</td>
                <td><input type="submit" value="Search" class="btn btn-primary"></td>
            }
        </tr>
    </table>
</div>
<table class="table table-bordered table-responsive">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Payers.paymentType)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.bankName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.accNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.branchcode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.accountType)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.commenceDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.policyNo)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Payers.paymentType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.bankName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.accNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.branchcode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.accountType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.commenceDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.amount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.policyNo)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.debitAuthNo }) |
                @Html.ActionLink("Details", "Details", new { id = item.debitAuthNo }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.debitAuthNo })
            </td>
        </tr>
    }

</table>
